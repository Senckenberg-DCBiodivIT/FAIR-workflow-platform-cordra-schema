{
  "name": "Dataset",
  "schema": {
    "type": "object",
    "required": [
      "@id",
      "@type",
      "@context",
      "name"
    ],
    "properties": {
      "@id": {
        "type": "string",
        "cordra": {
          "disableInUi": true,
          "type": {
            "autoGeneratedField": "handle"
          },
          "preview": {
            "showInPreview": true,
            "isPrimary": true
          }
        }
      },
      "@type": {
        "type": "string",
        "cordra": {
          "disableInUi": true
        }
      },
      "@context": {
        "type": "string",
        "cordra": {
          "disableInUi": true
        }
      },
      "name": {
        "type": "string",
        "title": "Name",
        "cordra": {
          "preview": {
            "showInPreview": true
          }
        }
      },
      "description": {
        "type": "string",
        "title": "Description",
        "format": "textarea"
      },
      "keywords": {
        "type": "array",
        "title": "Keywords",
        "items": {
          "type": "string"
        }
      },
      "dateCreated": {
        "type": "string",
        "cordra": {
          "type.autoGeneratedField": "createdOn"
        }
      },
      "dateModified": {
        "type": "string",
        "cordra": {
          "type.autoGeneratedField": "modifiedOn"
        }
      },
      "datePublished": {
        "type": "string",
        "cordra": {
          "type": {
            "autoGeneratedField": "createdOn"
          }
        }
      },
      "about": {
        "title": "About (Taxon)",
        "type": "object",
        "required": [
          "@type",
          "name",
          "identifier"
        ],
        "properties": {
          "@type": {
            "type": "string",
            "cordra": {
              "disableInUi": true
            }
          },
          "name": {
            "type": "string",
            "title": "Name",
            "cordra": {
              "preview": {
                "showInPreview": true
              }
            }
          },
          "identifier": {
            "type": "string",
            "title": "Identifier",
            "cordra": {
              "preview": {
                "showInPreview": true
              }
            }
          },
          "taxonRank": {
            "type": "string",
            "title": "Taxon Rank"
          }
        }
      },
      "author": {
        "name": "Author",
        "type": "array",
        "format": "table",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "cordra": {
            "type": {
              "handleReference": {
                "types": [
                  "Person"
                ]
              }
            }
          }
        },
        "cordra": {
          "preview": {
            "showInPreview": true,
            "isPrimary": true
          }
        }
      },
      "license": {
        "type": "string",
        "title": "License"
      },
      "distribution": {
        "title": "Distribution",
        "description": "URL under which this data set is distributed.",
        "required": [
            "@type",
            "name",
            "contentUrl",
            "encodingFormat"
        ],
        "properties": {
          "@type": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "contentUrl": {
            "type": "string"
          },
          "encodingFormat": {
            "type": "string"
          }
        }
      }
    }
  }
}
